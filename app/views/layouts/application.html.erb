<!DOCTYPE html>
<html>
<head>
  <title>My Angular App!</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body ng-app="flapperNews">
  <!-- <div class="container"> -->

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ui-view></ui-view>
    </div>
  </div>

  <!-- </div> -->

<script type="text/ng-template" id="/home.html">
      {{test}}
      <div class="page-header"><h1>Flapper News</h1></div>

      <div ng-repeat="post in posts | orderBy: '-upvotes' ">
        <span ng-click="incrementUpvotes(post)" class="glyphicon glyphicon-thumbs-up"></span> {{post.upvotes}}
        <span style="font-size:20px;margin-left:10px">
          <a ng-show="post.link" href="{{post.link}}">{{post.title}}</a>
          <span ng-hide="post.link">{{post.title}}</span>
        </span>
      </div>

      <form ng-submit="addPost()" style="margin-top:30px">
        <h3 class="text-center">Add a new post</h3>
        <div class="form-group">
          <input type="text" ng-model="title" placeholder="title" class="form-control"><br>
        </div>
        <div class="form-group">
          <input type="text" ng-model="link" placeholder="link" class="form-control"><br>
        </div>
        <div class="text-right">
          <button type="submit" class="btn btn-default">Add Post</button>
        </div>
      </form>

</script>

<script type="text/ng-template" id="/posts.html">
</script>

</body>

</html>
